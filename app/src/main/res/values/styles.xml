<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlayBottom" parent="@style/Widget.MaterialComponents.BottomAppBar"/>

    <style name="BlueRevised" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/nonActiveTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="buttonStyle">@style/NotCapsButton</item>
        <item name="fontFamily">sans-serif</item>
        <item name="titleTextColor">@color/colorPrimary</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="NotCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="textTitleBlack24">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textTitleBlackToolbar20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondTitleBlack18">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSecondTitleBlack16">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textSecondTitleBlack14">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textTitleBlack20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSecondGray18">
        <item name="android:textColor">@color/thirdTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textSecondGray14">
        <item name="android:textColor">@color/thirdTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textSecondLiteGray14">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textForBtnNewWhite18">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="BtnPrimaryColorTextWhiteRipple">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_primary_ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="BtnPrimaryColorTextWhiteRippleNew">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_primary_ripple</item>
    </style>

    <style name="BtnSelectedColorTextWhiteRipple">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_selected_ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="textSecondTitlePrimary14">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BtnWhiteColorClickableRipple">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_white_ripple</item>
    </style>

    <style name="BtnWhiteColorClickableRippleNoBackground">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_no_background_ripple</item>
    </style>
    
    <style name="BtnPrimaryColorCircleRippleRadius30dp">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/bg_primary_circle_ripple</item>
    </style>

    <style name="BtnWhiteColorTextBlack">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="BtnCircle32NoBackground">
        <item name="android:background">@drawable/shape_oval_32</item>
    </style>

    <style name="BtnCircle100NoBackground">
        <item name="android:background">@drawable/shape_oval_50</item>
    </style>


</resources>